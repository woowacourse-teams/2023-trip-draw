<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TripDraw" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/td_dark_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- splash screen -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/td_white</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.TripDraw</item>
    </style>

    <!-- text theme. -->

    <style name="title_1B">
        <item name="android:fontFamily">@font/noto_sans_cjkkr_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">7.2sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="title_1M">
        <item name="android:fontFamily">@font/noto_sans_cjkkr_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">7.2sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="title_2B">
        <item name="android:fontFamily">@font/noto_sans_cjkkr_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="title_2M">
        <item name="android:fontFamily">@font/noto_sans_cjkkr_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="title_3B">
        <item name="android:fontFamily">@font/noto_sans_cjkkr_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">5.4sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="title_3M">
        <item name="android:fontFamily">@font/noto_sans_cjkkr_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">5.4sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="subtitle_1">
        <item name="android:fontFamily">@font/noto_sans_cjkkr_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">-200sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="body_1">
        <item name="android:fontFamily">@font/noto_sans_cjkkr_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">7.5sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="subtitle_2">
        <item name="android:fontFamily">@font/noto_sans_cjkkr_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingExtra">4.2sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="body2">
        <item name="android:fontFamily">@font/noto_sans_cjkkr_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">4.2sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="caption_1">
        <item name="android:fontFamily">@font/noto_sans_cjkkr_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>
